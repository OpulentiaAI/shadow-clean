{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": [
            "ES2022"
        ],
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "apps/server/src/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "api/**/*",
        "apps/server/**/*",
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
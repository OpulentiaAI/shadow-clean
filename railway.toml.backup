[[services.shadow-sidecar]]
[services.shadow-sidecar.build]
builder = "dockerfile"
dockerfilePath = "Dockerfile.sidecar"

[services.shadow-sidecar.deploy]
startCommand = "node apps/sidecar/dist/server.js"
healthcheckPath = "/health"
healthcheckTimeout = 100
restartPolicyType = "ON_FAILURE"
restartPolicyMaxRetries = 3

[[services.frontend]]
[services.frontend.build]
builder = "dockerfile"
dockerfilePath = "Dockerfile.frontend"

[services.frontend.deploy]
startCommand = "node apps/frontend/server.js"
healthcheckPath = "/"
healthcheckTimeout = 100
restartPolicyType = "ON_FAILURE"
restartPolicyMaxRetries = 3